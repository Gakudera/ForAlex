<Window x:Class="Guschin.GraduateProject.Views.FAQEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guschin.GraduateProject.Views"
        mc:Ignorable="d"
        Title="FAQEditWindow" 
        Height="350" 
        Width="400">
    <Grid>
        <StackPanel
            VerticalAlignment="Center">
            <TextBlock 
                Text="Date:"/>
            <TextBox
                x:Name="DateTB"
                Text=""/>

            <TextBlock 
                Text="Question:"/>
            <TextBox
                x:Name="QuestionTB"
                Height="50"
                Text=""/>

            <TextBlock 
                Text="Answer:"/>
            <TextBox
                x:Name="AnswerTB"
                Height="150"
                Text=""/>

            <Button 
                Content="Add/Save"
                Click="Add_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
